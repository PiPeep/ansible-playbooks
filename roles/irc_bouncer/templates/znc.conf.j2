#jinja2: trim_blocks: False
// Do NOT edit this file while ZNC is running!
// Use webadmin or *admin instead.
//
// http://en.znc.in/wiki/Configuration

Listener   = 6667
Listener   = +6697
PidFile    = /var/run/znc/znc.pid

{% for network in irc.networks %}
<User {{ irc.nick }}-{{ network.name }}>
    Pass       = {{ irc_znc_hash.stdout }}
    Admin      = true
    Nick       = {{ irc.nick }}
    AltNick    = {{ irc.nick }}_
    Ident      = {{ irc.nick }}
    RealName   = {{ irc.nick }}
    Buffer     = 100
    KeepBuffer = false
    ChanModes  = +stn
    QuitMsg    = {{ irc.quitmsg }}

    LoadModule = nickserv
    LoadModule = simple_away

    {% for s in network.servers %}
    Server     = {{ s.address }} {% if s.ssl %}+{% endif %}{{ s.port }}
    {% endfor %}

    {% for channel in network.channels %}
    <Chan {{ channel }}>
    </Chan>
    {% endfor %}
</User>
{% endfor %}
